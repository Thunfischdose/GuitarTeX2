{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "key": "ctrl+shift+b",
    "tasks": [
        {
            "taskName": "parseGTX",
            //"isBuildCommand": true,
            "command": "java",
            "type": "shell",
            "args": ["-cp","${workspaceRoot}/GTX-Parser/bin/","Main","-o","${file}"],
            "windows": {
                "args": ["-cp","${workspaceRoot}\\GTX-Parser\\bin","Main","-o","${file}"]
            }
        },
        {
            "taskName": "openResTex",
            "type": "shell",
            "isBuildCommand": true,
            "command":"code",
            "args": ["${workspaceRoot}/tex/${fileBasenameNoExtension}.tex"],
            "windows": {
                "args": ["${workspaceRoot}\\tex\\${fileBasenameNoExtension}.tex"]
            },
            "dependsOn": [
                "parseGTX"
            ],
            "problemMatcher": []
        },
        {
            "taskName": "Recompile Java-Parser",
            //"isBuildCommand": true,
            "command": "javac",
            "type": "shell",
            "args": ["-g","-d","${workspaceRoot}/GTX-Parser/bin","-sourcepath","${workspaceRoot}/GTX-Parser/src","${workspaceRoot}/GTX-Parser/src/Main.java"],
            "windows": {
                "args": ["-g","-d","${workspaceRoot}\\GTX-Parser\\bin","-sourcepath","${workspaceRoot}\\GTX-Parser\\src","${workspaceRoot}\\GTX-Parser\\src\\Main.java"]
            }           
        }
    ]
}
    